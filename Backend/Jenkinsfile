pipeline {
    agent {
        docker {
            image 'node:18'
        }
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test || true'  // Skip if no tests yet
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t habit-tracker-app .'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh 'docker run -d -p 3000:3000 habit-tracker-app'
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed 😢'
        }
        success {
            echo 'Pipeline succeeded 🎉'
        }
    }
}
