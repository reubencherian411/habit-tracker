pipeline {
    agent any

    environment {
        PATH = "${env.PATH}:/usr/local/bin"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Setup Node.js Environment') {
            steps {
                script {
                    def nodeVersion = sh(script: 'node -v || echo "Node.js not found"', returnStdout: true).trim()
                    if (nodeVersion.contains("not found")) {
                        error("Node.js is not installed. Please install Node.js 18 on the Jenkins agent.")
                    }
                    echo "Using ${nodeVersion}"
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                // Run npm install in the root directory
                sh '''
                    ls -la  # Check current directory
                    npm install
                '''
            }
        }

        stage('Run Application') {
            steps {
                sh 'node app.js &'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            sh '''
                pkill -f node || true
            '''
        }
        success {
            echo 'Pipeline completed successfully! ✅'
        }
        failure {
            echo 'Pipeline failed ❌'
        }
    }
}
