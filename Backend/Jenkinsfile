pipeline {
    agent any

    environment {
        PATH = "${env.PATH}:/usr/bin"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Setup Node.js Environment') {
            steps {
                script {
                    def nodeVersion = sh(script: 'node -v || echo "Node.js not found"', returnStdout: true).trim()
                    if (nodeVersion.contains("not found")) {
                        error("Node.js is not installed on the Jenkins agent.")
                    }
                    echo "Using Node.js version: ${nodeVersion}"
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run App') {
            steps {
                sh 'nohup node app.js &'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            sh 'pkill -f "node app.js" || true'
        }

        success {
            echo '✅ Build completed successfully!'
        }

        failure {
            echo '❌ Build failed.'
        }
    }
}
